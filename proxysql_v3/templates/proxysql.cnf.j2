datadir="/var/lib/proxysql"

admin_variables=
{
    admin_credentials="{{ proxysql_admin_user }}:{{ proxysql_admin_password }}"
    mysql_ifaces="{{ proxysql_admin_host }}:{{ proxysql_admin_port }}"
    refresh_interval=2000
    debug=false
}

mysql_variables=
{
    threads=4
    max_connections={{ proxysql_max_connections }}
    default_query_delay={{ proxysql_default_query_delay }}
    default_query_timeout={{ proxysql_default_query_timeout }}
    have_compress=true
    poll_timeout=2000
    interfaces="{{ proxysql_mysql_host }}:{{ proxysql_mysql_port }}"
    default_schema="information_schema"
    stacksize=1048576
    server_version="10.11.0"
    connect_timeout_server=10000
    monitor_history=60000
    monitor_connect_interval=60000
    monitor_ping_interval=10000
    ping_timeout_server=200
    commands_stats=true
    sessions_sort=true
}

