# PostgreSQL Configuration for KeyBuzz HA
# Generated by Ansible - DO NOT EDIT MANUALLY
# Note: Patroni will override some parameters

# Connection Settings
listen_addresses = '{{ postgres_listen_addresses }}'
port = {{ postgres_listen_port }}
max_connections = {{ postgres_max_connections }}

# Memory Settings
shared_buffers = {{ postgres_shared_buffers }}
effective_cache_size = 1GB
maintenance_work_mem = 128MB

# WAL Settings
wal_level = {{ postgres_wal_level }}
max_wal_senders = 10
max_replication_slots = 10
wal_keep_size = 1GB

# Replication
hot_standby = {{ postgres_hot_standby }}
hot_standby_feedback = on

# Logging
logging_collector = on
log_directory = '{{ postgres_data_dir }}/log'
log_filename = 'postgresql-%Y-%m-%d.log'
log_rotation_age = 1d
log_rotation_size = 100MB

# Performance
random_page_cost = 1.1
effective_io_concurrency = 200

